{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "api",
      "entryFile": "src/main",
      "sourceRoot": "api/src",
      "compilerOptions": {
        "tsConfigPath": "api/tsconfig.json"
      }
    }
  }
}